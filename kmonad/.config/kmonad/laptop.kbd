(defcfg
  ;; For Linux
  input  (device-file "/dev/input/by-path/platform-i8042-serio-0-event-kbd")
  output (uinput-sink "My KMonad output"
    "/usr/bin/sleep 1 && setxkbmap -option compose:menu")
  cmp-seq menu    ;; Set the compose key to 'Menu'
  cmp-seq-delay 5 ;; 5ms delay between each compose-key sequence press

  ;; For Windows
  ;; input  (low-level-hook)
  ;; output (send-event-sink)

  ;; For MacOS
  ;; input  (iokit-name "my-keyboard-product-string")
  ;; output (kext)

  ;; Comment this if you want unhandled events not to be emitted
  fallthrough true

  ;; Set this to false to disable any command-execution in KMonad
  allow-cmd false
)


(defsrc
  grv   1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab   q    w    e    r    t    y    u    i    o    p    [    ]    ret
  caps  a    s    d    f    g    h    j    k    l    ;    '    \
  lsft lsgt  z    x    c    v    b    n    m    ,    .    /    rsft
  lctl comp  lmet lalt            spc           ralt rmet rctl
)


(defalias
  sspace (tap-hold 200 spc (around lctl (around lalt lmet)))
  ces (tap-hold 200 esc lctl)
  cqu (tap-hold 200 ' lctl)
  ac #(lalt compose ')
  gr #(lalt compose `)
  cir #(lalt compose ^)
  aalt (around lalt (layer-toggle accents))
  ;; aalt lalt
)

(deflayer main
  grv   1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab   q    w    e    r    t    y    u    i    o    p    [    ]    ret
  @ces  a    s    d    f    g    h    j    k    l    ;    @cqu \
  lsft grv   z    x    c    v    b    n    m    ,    .    /    rsft
  lctl comp  lmet @aalt        @sspace          ralt rmet rctl
)

(deflayer accents
  @gr   _    _    _    _    _    _    _    _    _    _    _    _    _
  _     _    _    @ac  _    _    _    _    @cir _    _    _    _    _
  _     _    _    _    _    _    _    _    _    _    _    _    _
  _    @gr   _    _    _    _    _    _    _    _    _    _    _
  _    _     _    _              _              _    _    _
)
