{
	"title": "Spacebar changes",
	"rules": [
		{
			"description": "Post space is pressed alone, hyper otherwise",
			"manipulators": [
				{
					"from": {
						"key_code": "spacebar",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "left_control",
							"modifiers": [
								"left_command",
								"left_control",
								"left_option"
							]
						}
					],
					"to_if_alone": [
						{
							"key_code": "spacebar"
						}
					],
					"type": "basic"
				}
			]
		}
	]
}
