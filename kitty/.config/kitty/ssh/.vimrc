set number
set relativenumber
set shiftwidth=4
set tabstop=4
set expandtab
set autoindent
set smartindent
set smarttab

" Leader key
let mapleader = "<Space>"
let g:mapleader = "<Space>"
nnoremap <Space> <Nop>

nnoremap <Leader>v <C-w>v
nnoremap <Leader>s <C-w>s
nnoremap <Leader><Tab> <C-^>
nnoremap <C-r> <C-w>w
nnoremap <C-t> <C-w>W
